{
  "description": "Insurance Questionnaire Structure for ML Model Training",
  "version": "1.0",
  "last_updated": "2025-10-25",
  "target_predictions": [
    "risk_score (0-100)",
    "premium_estimate (INR)",
    "coverage_recommendation",
    "policy_type_suitability"
  ],
  "insurance_types": {
    "term_life": {
      "name": "Term Life Insurance",
      "features": [
        {"id": "fullName", "type": "text", "ml_feature": "name", "category": "demographics"},
        {"id": "dateOfBirth", "type": "date", "ml_feature": "age", "category": "demographics", "preprocessing": "calculate_age"},
        {"id": "gender", "type": "categorical", "ml_feature": "gender", "category": "demographics", "values": ["Male", "Female", "Other"]},
        {"id": "maritalStatus", "type": "categorical", "ml_feature": "marital_status", "category": "demographics", "values": ["Single", "Married", "Divorced", "Widowed"]},
        {"id": "dependents", "type": "numeric", "ml_feature": "num_dependents", "category": "demographics", "range": [0, 20]},
        {"id": "occupation", "type": "categorical", "ml_feature": "occupation", "category": "demographics", "high_risk_values": ["Police Officer", "Firefighter", "Pilot", "Construction Worker"]},
        {"id": "location", "type": "text", "ml_feature": "location", "category": "demographics"},
        {"id": "annualIncome", "type": "numeric", "ml_feature": "annual_income", "category": "financial", "unit": "INR"},
        {"id": "coverageAmount", "type": "numeric", "ml_feature": "coverage_amount", "category": "coverage", "unit": "INR"},
        {"id": "policyTerm", "type": "numeric", "ml_feature": "policy_term", "category": "coverage", "unit": "years", "values": [10, 15, 20, 25, 30]},
        {"id": "height", "type": "numeric", "ml_feature": "height", "category": "health", "unit": "cm", "preprocessing": "calculate_bmi"},
        {"id": "weight", "type": "numeric", "ml_feature": "weight", "category": "health", "unit": "kg", "preprocessing": "calculate_bmi"},
        {"id": "smokingStatus", "type": "categorical", "ml_feature": "smoking_status", "category": "health", "values": ["Never", "Former (quit >1 year)", "Current"], "risk_impact": "high"},
        {"id": "alcoholConsumption", "type": "categorical", "ml_feature": "alcohol_consumption", "category": "health", "values": ["None", "Occasional", "Regular"]},
        {"id": "medicalConditions", "type": "multi_categorical", "ml_feature": "medical_conditions", "category": "health", "values": ["None", "Diabetes", "Hypertension", "Heart Disease", "Asthma", "Cancer", "Other"], "risk_impact": "high"},
        {"id": "familyHistory", "type": "multi_categorical", "ml_feature": "family_history", "category": "health", "values": ["None", "Heart Disease", "Cancer", "Diabetes", "Stroke"]},
        {"id": "exerciseFrequency", "type": "numeric", "ml_feature": "exercise_frequency", "category": "lifestyle", "unit": "days_per_week", "range": [0, 7]},
        {"id": "hasNominee", "type": "boolean", "ml_feature": "has_nominee", "category": "coverage"}
      ]
    },
    "health": {
      "name": "Health Insurance",
      "features": [
        {"id": "fullName", "type": "text", "ml_feature": "name", "category": "demographics"},
        {"id": "dateOfBirth", "type": "date", "ml_feature": "age", "category": "demographics", "preprocessing": "calculate_age"},
        {"id": "gender", "type": "categorical", "ml_feature": "gender", "category": "demographics"},
        {"id": "maritalStatus", "type": "categorical", "ml_feature": "marital_status", "category": "demographics"},
        {"id": "dependents", "type": "numeric", "ml_feature": "num_dependents", "category": "demographics"},
        {"id": "occupation", "type": "categorical", "ml_feature": "occupation", "category": "demographics"},
        {"id": "location", "type": "text", "ml_feature": "location", "category": "demographics"},
        {"id": "annualIncome", "type": "numeric", "ml_feature": "annual_income", "category": "financial"},
        {"id": "coverageAmount", "type": "numeric", "ml_feature": "coverage_amount", "category": "coverage"},
        {"id": "height", "type": "numeric", "ml_feature": "height", "category": "health"},
        {"id": "weight", "type": "numeric", "ml_feature": "weight", "category": "health"},
        {"id": "priorHealthInsurance", "type": "boolean", "ml_feature": "prior_insurance", "category": "coverage"},
        {"id": "medicalConditions", "type": "multi_categorical", "ml_feature": "medical_conditions", "category": "health", "risk_impact": "high"},
        {"id": "hospitalizationHistory", "type": "boolean", "ml_feature": "hospitalization_history", "category": "health"},
        {"id": "surgeryHistory", "type": "boolean", "ml_feature": "surgery_history", "category": "health"},
        {"id": "medications", "type": "boolean", "ml_feature": "on_medications", "category": "health"},
        {"id": "smokingStatus", "type": "categorical", "ml_feature": "smoking_status", "category": "health", "risk_impact": "high"},
        {"id": "alcoholConsumption", "type": "categorical", "ml_feature": "alcohol_consumption", "category": "health"},
        {"id": "exerciseFrequency", "type": "numeric", "ml_feature": "exercise_frequency", "category": "lifestyle"}
      ]
    },
    "car": {
      "name": "Car Insurance",
      "features": [
        {"id": "fullName", "type": "text", "ml_feature": "name", "category": "demographics"},
        {"id": "dateOfBirth", "type": "date", "ml_feature": "age", "category": "demographics"},
        {"id": "gender", "type": "categorical", "ml_feature": "gender", "category": "demographics"},
        {"id": "occupation", "type": "categorical", "ml_feature": "occupation", "category": "demographics"},
        {"id": "location", "type": "text", "ml_feature": "location", "category": "demographics"},
        {"id": "annualIncome", "type": "numeric", "ml_feature": "annual_income", "category": "financial"},
        {"id": "vehicleMake", "type": "categorical", "ml_feature": "vehicle_make", "category": "vehicle"},
        {"id": "vehicleModel", "type": "text", "ml_feature": "vehicle_model", "category": "vehicle"},
        {"id": "vehicleYear", "type": "numeric", "ml_feature": "vehicle_year", "category": "vehicle", "preprocessing": "calculate_vehicle_age"},
        {"id": "vehicleValue", "type": "numeric", "ml_feature": "vehicle_value", "category": "vehicle"},
        {"id": "coverageType", "type": "categorical", "ml_feature": "coverage_type", "category": "coverage", "values": ["Third Party", "Comprehensive", "Zero Depreciation"]},
        {"id": "drivingExperience", "type": "numeric", "ml_feature": "driving_experience", "category": "lifestyle"},
        {"id": "claimHistory", "type": "boolean", "ml_feature": "claim_history", "category": "history", "risk_impact": "high"},
        {"id": "parkingType", "type": "categorical", "ml_feature": "parking_type", "category": "lifestyle"},
        {"id": "annualMileage", "type": "numeric", "ml_feature": "annual_mileage", "category": "lifestyle"}
      ]
    }
  },
  "ml_model_inputs": {
    "features_to_encode": [
      "gender",
      "maritalStatus",
      "occupation",
      "location",
      "smokingStatus",
      "alcoholConsumption",
      "coverageType",
      "parkingType"
    ],
    "features_to_normalize": [
      "age",
      "annual_income",
      "coverage_amount",
      "height",
      "weight",
      "exercise_frequency",
      "driving_experience",
      "annual_mileage",
      "vehicle_value"
    ],
    "features_for_one_hot_encoding": [
      "medical_conditions",
      "family_history"
    ],
    "derived_features": [
      {"name": "bmi", "formula": "weight / (height/100)^2"},
      {"name": "bmi_category", "type": "categorical", "values": ["Underweight", "Normal", "Overweight", "Obese"]},
      {"name": "age_group", "type": "categorical", "values": ["18-25", "26-35", "36-50", "51-65", "65+"]},
      {"name": "coverage_to_income_ratio", "formula": "coverage_amount / annual_income"},
      {"name": "vehicle_age", "formula": "current_year - vehicle_year"},
      {"name": "risk_score_composite", "formula": "weighted_sum_of_risk_factors"}
    ]
  },
  "target_variables": {
    "risk_score": {
      "type": "regression",
      "range": [0, 100],
      "description": "Overall risk assessment score"
    },
    "premium_estimate": {
      "type": "regression",
      "unit": "INR",
      "description": "Estimated monthly premium"
    },
    "coverage_recommendation": {
      "type": "multi_class_classification",
      "classes": ["Basic", "Standard", "Comprehensive", "Premium"],
      "description": "Recommended coverage level"
    },
    "policy_suitability_score": {
      "type": "regression",
      "range": [0, 1],
      "description": "How suitable this insurance type is for the user"
    }
  },
  "data_preprocessing_steps": [
    "1. Handle missing values using median/mode imputation",
    "2. Encode categorical variables using LabelEncoder/OneHotEncoder",
    "3. Normalize numerical features using StandardScaler/MinMaxScaler",
    "4. Create derived features (BMI, age groups, ratios)",
    "5. Handle multi-categorical features using MultiLabelBinarizer",
    "6. Feature engineering for interaction terms",
    "7. Remove outliers using IQR method or Z-score",
    "8. Balance dataset using SMOTE if needed"
  ],
  "recommended_ml_models": [
    "XGBoost Regressor/Classifier",
    "Random Forest Regressor/Classifier",
    "Gradient Boosting Machines",
    "Neural Networks (Multi-layer Perceptron)",
    "Ensemble methods combining multiple models"
  ],
  "model_evaluation_metrics": [
    "For Risk Score: RMSE, MAE, R²",
    "For Premium: RMSE, MAPE, R²",
    "For Classification: Accuracy, Precision, Recall, F1-Score, AUC-ROC"
  ]
}
